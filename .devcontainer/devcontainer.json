{
  "name": "Multi-Omics Workshop",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "postCreateCommand": "bash setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ],
      "settings": {
        "jupyter.defaultKernel": "conda_omics",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}
